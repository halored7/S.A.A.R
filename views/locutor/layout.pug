doctype html
html
	head
		title #{title}
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, minimum-scale=1.0")
		script(src="http://localhost:8000/public/js/jquery.js")
		link(href="http://localhost:8000/public/css/bootstrap.min.css" rel="stylesheet")
		link(href="http://localhost:8000/public/css/style.css" rel="stylesheet")
		link(href="http://localhost:8000/public/css/button_load.css" rel="stylesheet")
		link(href="http://localhost:8000/public/css/load_circle.css" rel="stylesheet")
		link(href="http://localhost:8000/public/css/bootstrap-switch.css" rel="stylesheet")
		script(src="http://localhost:8000/public/js/bootstrap.min.js")
		script(src="http://localhost:8000/public/js/bootstrap-notify.min.js")
		script(src="http://localhost:8000/public/js/tools.js")
		script(src="http://localhost:8000/socket.io/socket.io.js")
		script(src="http://localhost:8000/public/js/star_socket.js")
		script(src="http://localhost:8000/public/js/bootstrap-switch.js")
		script(src="http://localhost:8000/public/js/archivero.js")
		script(src="http://localhost:8000/public/js/notification.js")
		script(src="http://localhost:8000/public/js/change.js")
		script(src="http://localhost:8000/public/js/locutor_reporteproblema.js")
		script(src="http://localhost:8000/public/js/locutor_bitacora.js")
		script(src="http://localhost:8000/public/js/collapse.js")
	body
		div(class="container-fluid")
			div(class="row")
				div(class="col-md-12")
					ul(class="nav nav-tabs nav-justified")
						li(role="presentation")
							a(href="#" data-toggle="modal" data-target="#viewModal" onclick="notificationEvent();")
								span(class="icon-podcast") &nbsp;Eventos &nbsp;
								span(id="event" class="badge") #{notification.event}
						li(role="presentation")
							a(href="#" id="openchat")
								span(class="icon-bubbles2 ") &nbsp;Chat &nbsp;
								span(id="chat" class="badge") 0
		div(class="container-fluid")
			header
				nav(class="navbar navbar-inverse")
					div(class="container-fluid")
						div(class="navbar-header")
							button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-1")
								span(class="sr-only") Menu
								span(class="icon-bar")
								span(class="icon-bar")
								span(class="icon-bar")
						div(class="collapse navbar-collapse" id="navbar-1")
							ul(class="nav navbar-nav")
								li
									a(href="/locutor/reportar_problema")
										span(class="icon-list-numbered") &nbsp; Reportar problemas
								
								li(class="dropdown")
									a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button")
										span(class="icon-drawer") &nbsp;Archivero
										span(class="caret")
									ul(class="dropdown-menu")
										li
											a(href="/locutor/archivero/cartuchos")
												span(class="icon-list-numbered") &nbsp; Reportes de cartuchos
										li(class="divider")
										li
											a(href="/locutor/archivero/Spot")
												span(class="icon-mic") &nbsp; Reportes de Spot
										li(class="divider")
										li
											a(href="/locutor/archivero/eventos")
												span(class="icon-podcast") &nbsp; Reportes de control remoto
										li(class="divider")
										li
											a(href="/locutor/archivero/bitacoras")
												span(class="icon-profile") &nbsp; Reportes de bitácora
							ul(class="nav navbar-nav navbar-right")
								li(class="dropdown")
									a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button")
										span(class="icon-cog") &nbsp;Configuración
										span(class="caret")
									ul(class="dropdown-menu")
										li
											a(href="#")
												span(class="icon-user") &nbsp; #{USER.Name}
										li(class="divider")
										li
											a(href="#" data-toggle="modal" data-target="#modalChange")
												span(class="icon-pencil2") &nbsp; Cambiar datos
										li(class="divider")
										li
											a(href="/closeSession/user")
												span(class="icon-exit") &nbsp; Salir
		block contenido
		include ../chat
		include ../change